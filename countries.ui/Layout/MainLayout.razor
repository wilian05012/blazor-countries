@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode"></MudThemeProvider>
<MudPopoverProvider></MudPopoverProvider>
<MudDialogProvider></MudDialogProvider>
<MudSnackbarProvider></MudSnackbarProvider>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Outlined.Menu" Color="@Color.Inherit" OnClick="@ToggleMenu" />
        <MudText Typo="Typo.h6">Where in the world</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Outlined.LightMode : Icons.Material.Outlined.DarkMode)"
            Color="@Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_isMenuVisible" Variant="@DrawerVariant.Responsive" Elevation="1" Color="@Color.Default">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Rest Countries</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu />
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="py-5">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudLayout>

@code {
    private bool _isDarkMode = false;
    private bool _isMenuVisible = false;

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

    private void ToggleMenu() { _isMenuVisible = !_isMenuVisible; }
}