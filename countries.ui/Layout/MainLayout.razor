@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@_isDarkMode"></MudThemeProvider>
<MudPopoverProvider></MudPopoverProvider>
<MudDialogProvider></MudDialogProvider>
<MudSnackbarProvider></MudSnackbarProvider>

<MudLayout>
    <MudAppBar>
        <MudText Typo="Typo.h6">Where in the world</MudText>
        <MudSpacer />
        <MudIconButton Icon="@(_isDarkMode? Icons.Material.Outlined.LightMode : Icons.Material.Outlined.DarkMode)"
            Color="@Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDarkMode" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="py-5">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudLayout>

@code {
    private bool _isDarkMode = false;

    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
    }

}